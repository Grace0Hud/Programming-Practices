import java.util.Scanner;

public class slope
{
    //
    //computes the slope of the line between two points. 
    //uses the formula m = (y2-y1)/(x2-x1)
    public static void main(String args[]) 
    {
        //declares variables
        Scanner keyboard = new Scanner(System.in);
        double x1, x2,y1, y2;
        double top, bottom, result;
        
        //user input
         System.out.print("Enter the x coordinate of your first point: ");
        x1 = keyboard.nextDouble();
      
        System.out.print("Enter the y coordinate of your first point: ");
        y1 = keyboard.nextDouble();
      
        System.out.print("Enter the x coordinate of your second point: ");
        x2 = keyboard.nextDouble();
      
        System.out.print("Enter the y coordinate of your second point: ");
        y2 = keyboard.nextDouble();
      
        //Computations
        top = y2 - y1;
        bottom = x2 - x1;
        result = top/bottom;
        
        //prints result
        System.out.println("The slope of the line is: " + result);
    }//end of main
}//end of slope
